    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4"
        android:layout_marginBottom="10dp"/>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="5dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:padding="5dp">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="center_vertical"
                   android:layout_weight=".5"
                   android:text="Rate"/>

               <EditText android:textSize="18sp"
                   android:textColor="@color/black" android:id="@+id/userInputRate"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
android:text=""
                   android:gravity="right"
                   android:hint="Rate :"
                   android:layout_weight=".5"
                   android:inputType="numberDecimal" />

               </LinearLayout>

           </LinearLayout>



           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="5dp">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:padding="5dp">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center_vertical"
                       android:layout_weight=".5"
                       android:text="Qty"/>

                   <EditText android:textSize="18.0sp"
                       android:textColor="@color/black"
                       android:id="@+id/userInputQty"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_weight=".5"
                       android:hint="Qty :"
                       android:selectAllOnFocus="true"
                       android:gravity="right"
                       android:inputType="numberDecimal" />

               </LinearLayout>



           </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="5dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:padding="5dp">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center_vertical"
                       android:layout_weight=".5"
                       android:text="Free Qty"/>

                   <EditText android:textSize="18.0sp"
                       android:textColor="@color/black"
                       android:id="@+id/userInputfreeQty"
                       android:layout_width="match_parent"
                       android:layout_weight=".5"
                       android:layout_height="match_parent"
                       android:hint="Free Qty :"
                       android:gravity="right"
                       android:selectAllOnFocus="true"
                       android:inputType="numberDecimal" />

               </LinearLayout>


           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="5dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:padding="5dp">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center_vertical"
                       android:layout_weight=".5"
                       android:text="Amount"/>

                   <EditText android:textSize="18.0sp"
                       android:textColor="@color/black"
                       android:id="@+id/userInputamt"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_weight=".5"
                       android:hint="Amount :"
                       android:selectAllOnFocus="true"
                       android:gravity="right"
                       android:inputType="numberDecimal"
                       android:enabled="false"/>

               </LinearLayout>


           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="5dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:padding="5dp">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center_vertical"
                       android:layout_weight=".5"
                       android:text="Discount %"/>

                   <EditText android:textSize="18.0sp"
                       android:textColor="@color/black"
                       android:id="@+id/userInputdiscper"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_weight=".5"
                       android:hint="Disc % :"
                       android:gravity="right"
                       android:inputType="numberDecimal" />

               </LinearLayout>



           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="5dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:padding="5dp">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center_vertical"
                       android:layout_weight=".5"
                       android:text="Discount Rate"/>

                   <EditText android:textSize="18.0sp"
                       android:textColor="@color/black"
                       android:id="@+id/userInputdiscamt"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_weight=".5"
                       android:hint="Disc Amt :"
                       android:gravity="right"
                       android:inputType="numberDecimal" />
               </LinearLayout>

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="5dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:padding="5dp">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center_vertical"
                       android:layout_weight=".5"
                       android:text="Gross Amount"/>

                   <EditText android:textSize="18.0sp"
                       android:textColor="@color/black"
                       android:id="@+id/userInputgross"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:hint="Gross:"
                       android:selectAllOnFocus="true"
                       android:layout_weight=".5"
                       android:inputType="numberDecimal"
                       android:gravity="right"
                       android:enabled="false" />

               </LinearLayout>


           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="5dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:padding="5dp">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center_vertical"
                       android:layout_weight=".5"
                       android:text="Tax"/>

                   <EditText android:textSize="18.0sp"
                       android:textColor="@color/black"
                       android:id="@+id/userInputtax"
                       android:layout_width="fill_parent"
                       android:layout_height="match_parent"
                       android:hint="Tax :"
                       android:layout_weight=".5"
                       android:selectAllOnFocus="true"
                       android:inputType="numberDecimal"
                       android:gravity="right"
                       android:enabled="false"/>


               </LinearLayout>


           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:padding="5dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:padding="5dp">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center_vertical"
                       android:layout_weight=".5"
                       android:text="Total Amount"/>

                   <EditText android:textSize="18.0sp"
                       android:textColor="@color/black"
                       android:id="@+id/userInputtotal"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:hint="Total :"
                       android:layout_weight=".5"
                       android:selectAllOnFocus="true"
                       android:gravity="right"
                       android:inputType="numberDecimal"  android:enabled="false"/>
               </LinearLayout>



           </LinearLayout>
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
               android:id="@+id/linearLayout4"
                android:visibility="gone">


               <Button
                   android:id="@+id/cancel_btn"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:background="@color/purple_500"
                   android:text="Cancel"
                   android:layout_margin="5sp"
                   android:textColor="@color/white"/>

               <Button
                   android:id="@+id/save_btn"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="Save"
                   android:layout_margin="5sp"
                   android:background="@color/purple_500"
                   android:textColor="@color/white"/>

           </LinearLayout>

       </LinearLayout>

   </ScrollView>




</LinearLayout>